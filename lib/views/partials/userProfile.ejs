<div class="modal-block modal-visible modal-user-profile">
    <div class="flex-container">
        <div class="flex-header">
            <div class="profile-image-container">
                <img class="profile-image" src="<%= user.avatar%>">
            </div>
        </div>
        <div class="flex-body">
            <div class="flex-body-header">
                <h3><%= user.username %></h3>
                <div class="profile-trophy">
                    <span style="font-size: 22px"><%= user.score %></span>
                    <img src="app/assets/emoji_events.svg" width="40px" style="margin-right: 8px" />
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Shared Channels</h3>
                </div>
                <div class="panel-body">
                    <span class="label label-success" style="display: inline;">Admin-Channel</span>
                    <span class="label label-primary" style="display: inline;">Collaborator-Channel</span>
                    <span class="label label-danger" style="display: inline;">Observer-Channel</span>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Status</h3>
                </div>
                <div class="panel-body">
                    <%= user.status %>
                </div>
            </div>
            <div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Info</h3>
                    </div>
                    <div class="panel-body">
                        <%= user.info %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>