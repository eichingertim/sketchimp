<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <% if (title !== undefined) { %>
        <title>Sketchimp - <%= title %></title>
    <% } else { %>
        <title>Sketchimp</title>
    <% } %>
    <link rel="apple-touch-icon" sizes="57x57" href="/app/resources/img/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/app/resources/img/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/app/resources/img/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/app/resources/img/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/app/resources/img/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/app/resources/img/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/app/resources/img/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/app/resources/img/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/app/resources/img/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/app/resources/img/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/app/resources/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/app/resources/img/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/app/resources/img/favicon/favicon-16x16.png">
    <link rel="manifest" href="/app/resources/img/favicon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/app/resources/img/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <% if (title === "publicfeed") { %>
        <link href="/app/resources/css/bootstrap-reduced.css" rel="stylesheet">
    <% } else { %>
        <link href="/app/resources/css/bootstrap.min.css" rel="stylesheet">
    <% } %>

    <link href="/app/resources/css/combine.css" rel="stylesheet">

    <% if (title === "dashboard") { %>
        <link rel="stylesheet" href="/app/resources/css/dashboard.css">
    <% } else if (title === "landing") { %>
        <link rel="stylesheet" href="/app/resources/css/landing.css">
    <% } else if (title === "publicfeed") { %>
        <link rel="stylesheet" href="/app/resources/css/public-feed.css">
    <% } %>

</head>

<body>

<% if (title !== "dashboard") { %>
    <div class="navigation-top">
        <a href="/" class="navigation-logo btn">
            <img src="/app/resources/img/favicon/favicon-32x32.png">
            <span class="navigation-logo-text">Sket<span>chimp</span></span>
        </a>
        <div class="navigation-buttons">
            <% if (title !== "publicfeed") { %>
                <a href="/public-feed" class="btn">Public-Feed</a>
            <% } %>
            <% if (user !== undefined) { %>
                <a href="/dashboard" class="btn">Dashboard</a>
                <a href="/logout" class="btn">Logout</a>
            <% } else { %>
                <% if (title !== "login") { %>
                    <a href="/login" class="btn">Login</a>
                <% } %>
                <% if (title !== "register") { %>
                    <a href="/register" class="btn">Register</a>
                <% } %>
            <% } %>
        </div>
    </div>
<% } %>