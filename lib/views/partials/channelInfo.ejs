<div id="channel-info-dialog" class="dialog-container-inner">
    <img id="channel-info-close" class="dialog-close" src="app/assets/clear-icon.svg" height="30px" width="30px"/>
    <% if (channel) { %>
        <div class="profile-image-outer">
            <div class="profile-image-container" style="margin: 0">
                <% if (!channel.icon) { %>
                    <img id="channel-icon" class="profile-image hidden" src="<%= channel.icon ;%>">
                    <div class="placeholder-channel-icon"><%channel.name.substring(0,1)%></div>
                <% } else { %>
                    <img id="channel-icon" class="profile-image" src="<%= channel.icon ;%>">
                    <div class="placeholder-channel-icon hidden"><%channel.name.substring(0,1)%></div>
                <% } %>
                <div class="profile-image-overlay">Profilbild ändern</div>
            </div>
            <form id="form-upload-channel-icon" action="/api/channel/upload/<% channel.id; %>" method="POST"
                  enctype="multipart/form-data" class="hidden">
                <input id="channel-upload" style="width: 0; visibility: hidden" type="file" name="avatar" required>
                <span id="selected-file"></span>
                <button type="submit" id="btn-upload-channel" class="btn btn-primary" style="visibility: hidden">
                    Upload
                </button>
            </form>

        </div>
        <div class="horizontal-divider"></div>
        <div style="margin: 1vw; min-width: 18vw">
            <h3><span class="info-channel-name"><%= channel.name ;%></span></h3>
            </br>
            <div style="display: flex; align-items: center; justify-content: flex-start; margin-bottom: 10px"
                 class="hidden">
                <img src="app/assets/key.svg" style="margin-right: 10px">
                <span class="info-channel-id"><%= channel._id ;%></span>
            </div>
            <div style="display: flex; align-items: center; justify-content: flex-start; margin-bottom: 10px">
                <img src="app/assets/time.svg" style="margin-right: 10px">
                <span class="info-channel-creation"><%= channel.creation ;%></span>
            </div>
            <div style="display: flex; align-items: center; justify-content: flex-start; margin-bottom: 10px">
                <img src="app/assets/creator-icon.svg" style="margin-right: 10px">
                <span class="info-channel-creator"><%= channel.creator.username ;%></span>
            </div>
            <span class="delete-channel btn btn-radius btn-primary">Delete Channel</span>
            <span class="leave-channel btn btn-radius btn-primary">Leave Channel</span>
            <span class="copy-channel-id btn btn-radius btn-primary">Copy Invite-Link</span>
        </div>

    <% } else { %>
        <div class="profile-image-outer">
            <div class="profile-image-container">
                <div class="placeholder-channel-icon"></div>
                <img id="channel-icon" class="profile-image hidden">
                <div class="profile-image-overlay">Profilbild ändern</div>
            </div>
            <form id="form-upload-channel-icon" class="hidden" method="POST" enctype="multipart/form-data">
                <input id="channel-upload" style="width: 0; visibility: hidden" type="file" name="avatar" required>
                <span id="selected-file"></span>
                <button type="submit" id="btn-upload-channel" class="btn btn-primary" style="visibility: hidden">
                    Upload
                </button>
            </form>
        </div>
        <div class="horizontal-divider"></div>
        <div style="margin: 1vw; min-width: 18vw">
            <h3><span class="info-channel-name"></span></h3>
            </br>
            <div style="display: flex; align-items: center; justify-content: flex-start; margin-bottom: 10px" class="hidden">
                <img src="app/assets/key.svg" style="margin-right: 10px">
                <span class="info-channel-id"></span>
            </div>
            <div style="display: flex; align-items: center; justify-content: flex-start; margin-bottom: 10px">
                <img src="app/assets/time.svg" style="margin-right: 10px">
                <span class="info-channel-creation"></span>
            </div>
            <div style="display: flex; align-items: center; justify-content: flex-start; margin-bottom: 10px">
                <img src="app/assets/creator-icon.svg" style="margin-right: 10px">
                <span class="info-channel-creator"></span>
            </div>
            <span class="delete-channel btn btn-radius btn-primary">Delete Channel</span>
            <span class="leave-channel btn btn-radius btn-primary">Leave Channel</span>
            <span class="copy-channel-id btn btn-radius btn-primary">Copy Invite-Link</span>
        </div>
    <% } %>

</div>