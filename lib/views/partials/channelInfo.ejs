
        

    <div id="channel-info-dialog" class="page-single">
        <div class="modal-block modal-visible">
            <img id="channel-info-close" src="app/assets/clear-icon.svg" height="30px" width="30px"
                 style="cursor: pointer; position: absolute; top: 30px; right: 30px;"/>
            <% if (channel) {%>
                <div class="modal-block-content">
                    <h3>Channel Name: <span class="info-channel-name"><%= channel.name %></span></h3>
                </br>
                    <p>ID: <span class="info-channel-id"><%= channel._id %></span></p>
                    <p>Origin: <span class="info-channel-creation"><%= channel.creation %></span></p>
                    <p>Owner: <span class="info-channel-creator"><%= channel.creator.username %></span></p>
                    <span class="delete-channel btn btn-block btn-radius btn-primary">Delete Channel</span>
                    <span class="leave-channel btn btn-block btn-radius btn-primary">Leave Channel</span>
                    <form action="/api/channel/upload/<%= channel.id %>" method="POST" enctype="multipart/form-data">
                        <legend>Upload Channel Icon</legend>
                        <input type="file" name="avatar" required>
                        <button type="submit" class="btn btn-primary">Upload Channel Icon</button>
                    </form>
                </div>

            <%} else {%>
                <div class="modal-block-content">
                    <h3>Channel Name: <span class="info-channel-name"></span></h3>
                </br>
                    <p>ID: <span class="info-channel-id"></span></p>
                    <p>Origin: <span class="info-channel-creation"></span></p>
                    <p>Owner: <span class="info-channel-creator"></span></p>
                    <span class="leave-channel btn btn-block btn-radius btn-primary hidden">Leave Channel</span>
                    <span class="delete-channel btn btn-block btn-radius btn-primary hidden">Delete Channel</span>
                </div>
            <% } %>
        </div>
    </div>