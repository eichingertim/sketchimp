<div style="display: none">
  <%- include("partials/header"); -%>
</div>

<link rel="stylesheet" href="/app/resources/css/public-feed.css">


<div class="landing-top-bar" style="position: fixed; z-index: 2;">
  <a href="/" class="btn green">Home</a>
  <% if (user !== undefined) { %>
    <a href="/dashboard" class="btn green">Dashboard</a>
    <a href="/logout" class="btn green">Logout</a>
  <% } else { %>
    <a href="/login" class="btn green">Login</a>
    <a href="/register" class="btn green">Register</a>
  <% } %>
</div>

<div style="position: relative; width: 100%; height: 30%;">
  <div class="landing-main-container"  >
    <div class="landing-content">
      <h2 style="margin-top: 5vh; margin-bottom: 5vh; position: relative; z-index: 2;">Sketching With Friends 2</h2>
      <hr class="my-5" style="border: 1px solid #444444; width: 50%;">
      <h6 style="padding-top: 50px;">Browse what others made and award the Drawings you like!</h6>
    </div>
  </div>
</div>

<div class="container-fluid card-container">
  <div class="cards" id="cards">
    <% sketches.forEach(function(sketch){ %>
      <div class="card" id="<%= sketch.id %>">
        <div class="content">
            <div class="content-overlay">

            </div>
            <% if (sketch.path) { %>
              <img class="content-image" src="<%= sketch.path %>">
            <% } %>
              <div class="content-details fadeIn-bottom">
                <% if (sketch.name) { %>
                  <p class="content-title"><%= sketch.name %></p>
                <% } %>
                <% if(user != undefined) {%>
                  <img class="likebutton" src="/app/assets/thumb_up-white-18dp.svg"></img>
                  <img class="dislikebutton" src="/app/assets/thumb_down-white-18dp.svg"></img>
                <% } %>
              </div>
        </div>
      </div>
    <% }); %>
    <% for (let i = 0; i < 50; i++) { %>
      <% let width = 1 + Math.floor(Math.random() * 4), h = 200 + i, w = 300 + i;%>
      <div class="card card--width<%= width %>">
        <div class="content">
          <a href="https://unsplash.com/photos/HkTMcmlMOUQ" target="_blank"></a>
            <div class="content-overlay"></div>
            <img class="content-image" src="https://picsum.photos/<%= w %>/<%= h %>">
            <div class="content-details fadeIn-bottom">
              <p class="content-title">This is a title</p>
              <% if(user != undefined) {%>
                <img class="likebutton" src="/app/assets/thumb_up-white-18dp.svg"></img>
                <img class="dislikebutton" src="/app/assets/thumb_down-white-18dp.svg"></img>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
  </div>
</div>

